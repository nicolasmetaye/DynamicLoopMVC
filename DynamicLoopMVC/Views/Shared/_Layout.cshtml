<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>This is DynamicLoop books application - @Page.Title</title>
        <link href="@Href("~/content/Site.css")" rel="stylesheet" />
        <link href="@Href("~/favicon.ico")" rel="shortcut icon" type="image/x-icon" />
        <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    </head>
    <body>
        <div id="page">
            <div id="header" style="width: 100%; overflow: hidden">
                <div class="site-title">DynamicLoop Books</div>
                <div class="face"></div>
            </div>
            <ul id="menu">
                <li><a href="@Href("~/")">Home</a></li>
                <li><a href="@Href("~/Authors/")">Authors</a></li>
            </ul>
            <div id="main">
                <div id="content">
                    <h1>@Page.Title</h1>
                    @RenderBody()
                </div>
                <div id="footer">
                    &copy; @DateTime.Now.Year - DynamicLoop
                </div>
            </div>
        </div>
    </body>
</html>